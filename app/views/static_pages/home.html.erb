<% provide :title, t(".title") %>
<% if logged_in? %>
  <div class="row">
    <aside class="col-md-4">
      <section class="user_info">
        <%= render "shared/user_info" %>
      </section>
      <section class="micropost_form">
        <%= render "shared/micropost_form" %>
      </section>
    </aside>
    <div class="col-md-8">
      <h3><%= t ".h3" %></h3>
      <%= render "shared/feed" %>
    </div>
  </div>
<% else %>
<div class="center jumbotron">
  <h1><%= t ".h1" %></h1>
  <h2>
    <%= t ".home_html",link1: link_to(t(".tutorial"),"http://www.railstutorial.org/") %>
  </h2>
  <%= link_to t(".signup"), signup_path, class: "btn btn-lg btn-primary" %>
</div>
<div class="center ">
  <%= link_to image_tag(t(".rails_img"), alt: t(".alt")),
            t(".link2") %>
</div>
<% end %>
